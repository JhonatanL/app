.banner
	background-image url('../img/superstudio.png')
	background-size cover
	background-position center
	height 95vh
	position relative
	display flex
	justify-content center
	align-items center
	@media screen and (max-width 768px)
		height 80vh
	&:before
		background-color rgba(#000,.5)
		content ''
		width 100%
		height 100%
		position absolute
		top 0
		left: 0
		z-index 1
	&__title
		width 80%
		z-index 2
		color #fff
		font-weight bold
		font-size 62px
		@media screen and (max-width 768px)
			font-size 28px
		